@using MicroShop.Dto.CatologDtos.CategoryDtos
@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Category List</h4>
                <p>Make Category Operation With Table</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Category Name</th>
                                <th>Category Products</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.CategoryID</th>
                                    <td>@item.CategoryName</td>
                                    <td><a href="#" class="btn btn-warning">Products</a> </td>
                                    <td><a href="/Admin/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger">Delete</a> </td>
                                    <td><a href="/Admin/Category/UpdateCategory/@item.CategoryID" class="btn btn-success">Update</a> </td>
                                    
                                </tr>
                            }
                          
                            
                            
                        </tbody>
                    </table>
                    <a href="/Admin/Category/CreateCategory" class="btn btn-primary">add new category</a>
                </div>
            </div>
        </div>



    </div>
</section>

