@using MicroShop.Dto.CatologDtos.BrandDtos
@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Brand Update</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input  type="hidden" asp-for="BrandID"/>
                        <label>Brand Id</label>
                        <input type="text" readonly class="form-control" asp-for="BrandID" />
                        <br />
                        <label>Brand Name</label>
                        <input type="text" class="form-control" asp-for="BrandName" />
                        <br />
                        <label>Category Image</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />

                        <br />
                        <button class="btn btn-primary"> Update Brand</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

